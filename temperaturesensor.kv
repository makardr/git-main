<Label>:
    font_size: 30
    size_hint: 0.3,0.2

<Button>:
    font_size: 30
    size_hint: 0.5,0.2

<TextInput>:
    font_size: 30
    size_hint: 0.5,0.2

<MainWindow>:
    tabloidid: tabloid
    refreshbtnid: refreshbtn
    refreshingbtnid: refreshingbtn
    testbtnid: testbtn
    FloatLayout:

        Label:
            id: tabloid
            pos_hint:{"x":0.35,"y":0.33}
            text:"Temperature hasn't been updated yet"
        Button:
            id: refreshbtn
            pos_hint:{"left":1,"bottom":1}
            text:"Refresh"
            on_press:root.refresh()
        Button:
            id: refreshingbtn
            pos_hint:{"right":1,"bottom":1}
            text: "Start refreshing"
            on_press: root.refreshing()
        Button:
            id: testbtn
            pos_hint:{"left":1,"y":.2}
            text: "Test"

            on_press:
                root.callback_canvas()
        Button:
            id: settingsbtn
            pos_hint:{"right":1,"y":.2}
            text: "Settings"
            on_release:
                root.manager.current = "settings"
                root.manager.transition.direction = "left"


<SettingsWindow>:
    urlinputid: urlinput
    refreshinputid: refreshinput
    temperature_criticalinputid: temperature_criticalinput
    temperature1inputid: temperature1input
    FloatLayout:
        TextInput:
            id: urlinput
            text: "refresh_time"
            pos_hint:{"left":1,"y":.2}
        TextInput:
            id: refreshinput
            text: "refresh_time"
            pos_hint:{"left":1,"y":.4}
        TextInput:
            id: temperature_criticalinput
            text: "temperature_critical"
            pos_hint:{"left":1,"y":.6}
        TextInput:
            id: temperature1input
            text: "temperature1"
            pos_hint:{"left":1,"y":.8}
        Button:
            text: "Go back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            text: "url"
            pos_hint:{"right":1,"y":.2}
            on_press:
                root.save('url', 'self.urlinputid.text')
        Button:
            text: "refresh_time"
            pos_hint:{"right":1,"y":.4}
            on_press:
                root.save('refresh_time', 'self.refreshinputid.text')
        Button:
            text: "temperature_critical"
            pos_hint:{"right":1,"y":.6}
            on_press:
                root.save('temperature_critical', 'self.temperature_criticalinputid.text')
        Button:
            text: "temperature1"
            pos_hint:{"right":1,"y":.8}
            on_press:
                root.save('temperature1', 'self.temperature1inputid.text')
        Button:
            text: "Reset"
            pos_hint:{"right":1}
            on_press:
                root.reset()